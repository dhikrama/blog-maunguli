---
// src/components/Prose.astro
---
<div 
  class="
    prose 
    prose-lg 
    max-w-none
    
    dark:prose-invert /* Otomatis membalik warna dasar untuk mode gelap */

    prose-headings:text-foreground /* Semua heading menggunakan warna foreground */
    prose-p:text-muted-foreground /* Paragraf menggunakan warna muted */
    prose-a:text-primary-darker /* Link menggunakan warna primer gelap */
    prose-a:no-underline
    prose-a:transition-opacity
    hover:prose-a:opacity-80
    prose-strong:text-foreground
    prose-blockquote:border-primary /* Garis pada blockquote menggunakan warna primer */
    prose-blockquote:text-muted-foreground
    prose-li:marker:text-primary /* Warna bullet/number pada list */
  "
>
  <slot />
</div>