---
// src/components/Header.astro
import DarkModeToggle from "./DarkModeToggle.astro";
---
<header class="bg-background/80 backdrop-blur-md border-b border-foreground/10 sticky top-0 z-50">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center py-4">
            <a href="/" class="text-xl font-bold text-foreground">
                Maunguli <span class="font-semibold text-primary">Blog</span>
            </a>

            <nav class="hidden md:flex items-center gap-6 text-muted-foreground font-semibold">
                <a href="/category" class="hover:text-primary transition-colors">Kategori</a>
                <a href="/search" class="hover:text-primary transition-colors">Pencarian</a>
                <a href="/" class="text-sm hover:text-primary transition-colors">‚Üê Situs Utama</a>
            </nav>

            <div class="flex items-center gap-x-2 sm:gap-x-4">
                <DarkModeToggle />
                
                <button id="mobile-menu-button" class="md:hidden p-2 rounded-md text-foreground" aria-label="Buka menu">
                    <svg id="menu-open-icon" class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" /></svg>
                    <svg id="menu-close-icon" class="h-6 w-6 hidden" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" /></svg>
                </button>
            </div>
        </div>
    </div>
</header>