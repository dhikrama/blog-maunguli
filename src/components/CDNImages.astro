---
import { Image } from "astro:assets";
import { boolean } from "astro:schema";

const {
    src,
    alt = "",
    width = 800,
    layout = "constrained",
    class: className = "",
    inferSize=boolean,
    ...rest
} = Astro.props;
---

<Image
    src={src}
    alt={alt}
    width={width}
    layout={layout}
    class={className}
    inferSize={true}
    {...rest}
/>